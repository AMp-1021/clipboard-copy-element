{
  "extends": [
    "plugin:github/browser",
    "plugin:github/typescript"
  ],
  "globals": {
    "ClipboardCopyElement": "readable"
  },
  "overrides": [
    {
      "files": "test/**/*.js",
      "rules": {"github/no-then": "off"},
      "env": {
        "mocha": true
      },
      "globals": {
        "assert": true
      }
    },
    {
      "files": "*.js",
      "parser": "espree"
    }
  ]
}
